      </TableView>
      <AnchorPane prefHeight="50.0" prefWidth="200.0" GridPane.rowIndex="2">
         <children>
            <Button layoutX="712.0" layoutY="11.0" mnemonicParsing="false" onAction="#addPeer" text="Add" />
            <TextField fx:id="peerUri" layoutX="121.0" layoutY="11.0" />
            <Label layoutX="14.0" layoutY="16.0" text="URI:" />
         </children>
      </AnchorPane>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Mode">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#switchToDatabaseView" text="Database" />
